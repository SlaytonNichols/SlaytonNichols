@using Blogifier.Pages.Admin.Shared
@inject IJsonStringLocalizer<App> Localizer
<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
            <LayoutView Layout="@typeof(Blogifier.Pages.ErrorLayout)">
                @Localizer["error-msg"]
            </LayoutView>
        </CascadingAuthenticationState>
    </NotFound>
</Router>
