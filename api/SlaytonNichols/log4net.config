<log4net>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
        <file value="logs/logs.json" />
        <rollingStyle value="Date" />
        <datePattern value="yyyyMMdd-HH" />
        <PreserveLogFileNameExtension value="true" />
        <staticLogFileName value="true" />
        <appendToFile value="true" />
        <maxSizeRollBackups value="10" />
        <dateTimeStrategy type="log4net.Appender.RollingFileAppender+UniversalDateTime" />

        <!--json formatted log4net logging-->
        <layout type="log4net.Layout.SerializedLayout, log4net.Ext.Json">
            <decorator type="log4net.Layout.Decorators.StandardTypesDecorator, 
  log4net.Ext.Json" />
            <member value="date:date" />
            <member value="level:level" />
            <member value="logger:logger" />
            <member value="message:messageObject" />
            <member value="exception:exception" />
        </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
        <!--json formatted log4net logging-->
        <layout type="log4net.Layout.SerializedLayout, log4net.Ext.Json">
            <decorator type="log4net.Layout.Decorators.StandardTypesDecorator, 
  log4net.Ext.Json" />
            <member value="date:date" />
            <member value="level:level" />
            <member value="logger:logger" />
            <member value="message:messageObject" />
            <member value="exception:exception" />
        </layout>
    </appender>
    <!--Options are "ALL", "DEBUG", "INFO", "WARN", "ERROR", "FATAL" and 
"OFF".-->
    <root>
        <level value="INFO" />
        <appender-ref ref="ConsoleAppender" />
    </root>
    <root>
        <level value="WARN" />
        <appender-ref ref="ConsoleAppender" />
    </root>
    <root>
        <level value="ERROR" />
        <appender-ref ref="ConsoleAppender" />
    </root>
    <root>
        <level value="INFO" />
        <appender-ref ref="RollingFile" />
    </root>
    <root>
        <level value="WARN" />
        <appender-ref ref="RollingFile" />
    </root>
    <root>
        <level value="ERROR" />
        <appender-ref ref="RollingFile" />
    </root>
</log4net>